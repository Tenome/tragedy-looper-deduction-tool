          "daysPerLoop": 7,
          "cast": {
            "boss": [
              "brain",
              {
                "Turf": "School"
              }
            ],
            "nurse": "killer",
            "journalist": "serialKiller",
            "boyStudent": "friend",
            "alien": "friend",
            "informer": "conspiracyTheorist",
            "transferStudent": [
              "privateInvestigator",
              {
                "enters on day": 5
              }
            ],
            "godlyBeing": [
              "person",
              {
                "enters on loop": 4
              }
            ],
            "teacher": "person",
